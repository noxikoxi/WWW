extends layout

block scripts
    script(src="/javascripts/usersScript.js")


block content
    div.row
        p.fs-2.fw-bold(style="text-align:center") Rejestracja
        div.container.d-flex.justify-content-center(style="text-align:left")
            form(method="POST" action="/users/register")
                div.mb-3
                    label.form-label(for="username") Nazwa Użytkownika
                    input.form-control(id="username", name="username", placeholder="username" type="text")
                div.mb-3
                    label.form-label(for="email") Adres Email
                    input.form-control(id="email" name="email", placeholder="xyz@mail.com" type="email")
                div.mb-3
                    label.form-label(for="password") Hasło
                    input.form-control(id="password", name="password", placeholder="******" type="password")
                    div.form-text.mt-0(id="textAreaHelp") Masz już konto?
                        a(href="/users" style="text-decoration: None;")  Zaloguj się
                button.btn.btn-danger.mb-3(type="submit") Zarejestruj się

